<?xml version="1.0"?>
<config>
    <tabs>
        <wliconf translate="label">
            <label>Wishlist Notification</label>
            <sort_order>150</sort_order>
        </wliconf>
    </tabs>
    <sections>
        <notification translate="label" module="adminhtml">
            <label>Notification Settings</label>
            <tab>wliconf</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label comment">
                    <label>Webline's Wishlist Notification</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[This is a <strong>global settings</strong> for wishlist <em>Notification</em>.]]></comment>
                    <fields>
                        <allow translate="label comment">
                            <label>Display Popup</label>
                            <comment>Select Yes for Enable or No for Disable Popup Notification.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allow>

                        <content translate="label comment">
                            <label>Popup Content</label>
                            <comment>Content For popup that want to display in popup.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <allow>1</allow>
                            </depends>
                        </content>
                        
                        <bgcolor translate="label comment">
                            <label>Background Color</label>
                            <comment>Choose color for Background of popup </comment>
                            <frontend_type>text</frontend_type>
                  <frontend_model>wishlistnotificationbywli/adminhtml_system_config_form_field_color</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <allow>1</allow>
                            </depends>
                        </bgcolor>
                        
                        <fontcolor translate="label comment">
                            <label>Text Color</label>
                            <comment>Choose color for text displaying in popup. </comment>
                            <frontend_type>text</frontend_type>
                 <frontend_model>wishlistnotificationbywli/adminhtml_system_config_form_field_color</frontend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <allow>1</allow>
                            </depends>
                        </fontcolor>
                        
                        <fonttype translate="label comment">
                            <label>Font Type</label>
                            <comment>Select Font Type </comment>
                            <frontend_type>select</frontend_type>
                         <source_model>wishlistnotificationbywli/system_config_source_dropdown_values</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <allow>1</allow>
                            </depends>
                        </fonttype>
                        
                        <fontsize translate="label comment">
                            <label>Font Size</label>
                            <comment>Enter Size for fonts displaying in popup. </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <allow>1</allow>
                            </depends>
                        </fontsize>
                    </fields>
                </general>
            </groups>
        </notification>
    </sections>
</config>
